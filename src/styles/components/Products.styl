.Products
  &-items
    grid-template-columns repeat(4, 1fr)
    grid-gap 1rem
    grid-row-gap 1.5em
    display grid
    
  &-item
    
    text-decoration none
    box-shadow 8px 14px 38px rgba(39,44,49,.06), 1px 3px 8px rgba(39,44,49,.03)
    border-radiu 5px
    margin 0 0 20px 0
    position relative
    &-info
      padding 10px
      h2
        font-size 18px
        font-weight bold
        display flex
        justify-content space-between
        span
          color #33b13a
      p
        font-size 14px
        font-weight 300
    img
      width 100%
      height 200px
      border-radius 5px 5px 0 0
      object-fit contain
    button
      width 100%
      padding 10px
      border-radius 0px 0px 5px 5px
      border 0px
      outline 0
      cursor pointer
      font-size 14px
      font-weight 300
      &:hover
        background-color rgba(39,44,49,.06)
  .Products-MenuCategories
    display flex
    justify-content space-between
    width 800px
    margin 10px 0px 20px 0px     
  .Products-MenuCategories_button
    width 180px
    height 50px
    border-radius 10px
    background-color #006298
    color #f5e1a4
  .Products-search input
    width 800px
    height 50px 
    border-radius 10px
    background-color rgba(245,225,164,0.5)
    transition 1000
    pointer text
    &:focus 
      outline none
      background-color white

  .Product-search_icon
    width 100px
    color rgba(211,211,211,0.7)
    font-size 34px
    padding 20px
    margin-top -70px
    z-indez -1
    
    

    


